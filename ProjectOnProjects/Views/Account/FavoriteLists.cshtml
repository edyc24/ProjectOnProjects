@model IEnumerable<ProjectOnProjects.Models.FavoriteListModels>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorite Lists</title>
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            background-color: white;
            margin: 0;
            padding: 0;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem 2rem;
            background-color: white;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            font-family: serif;
            text-decoration: underline;
        }

        .timer {
            font-family: monospace;
            font-size: 1.2rem;
            color: #374151;
            font-weight: bold;
        }

        .main-content {
            display: flex;
            justify-content: space-between;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .folder {
            flex: 1;
            padding: 1rem;
        }

        .folder h2 {
            text-align: center;
            margin-bottom: 1rem;
        }

        .doc {
            display: inline-block;
            margin: 0.5rem;
            padding: 0.5rem 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f9f9f9;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .doc:hover {
            background-color: #e2e8f0;
        }

        .vertical-divider {
            width: 2px;
            background-color: #ccc;
            margin: 0 2rem;
        }
    </style>
</head>
<body>
    <header class="page-header">
        <div class="logo">Project on Projects</div>
        <div class="timer" id="timer">00:00:00 09.02.2025</div>
    </header>

    <div class="main-content">
        @foreach (var list in Model)
        {
            <div class="folder">
                <h2>@list.ListName</h2>
                @foreach (var project in list.Projects)
                {
                    <div class="doc">@project.ProjectName</div>
                }
            </div>
            <div class="vertical-divider"></div>
        }
    </div>

    <script>
        function updateTimer() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', {
                hour12: false,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            const dateStr = now.toLocaleDateString('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            }).replace(/\//g, '.');

            document.getElementById('timer').textContent = `${timeStr} ${dateStr}`;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    </script>
</body>
</html> 