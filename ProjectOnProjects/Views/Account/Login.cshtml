@model ProjectOnProjects.BusinessLogic.Implementation.Account.LoginModel

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Autentificare</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/Account/Login.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background-color: white;
            font-family: system-ui, -apple-system, sans-serif;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem 2rem;
            background-color: white;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            font-family: serif;
            text-decoration: underline;
        }

        .timer {
            font-family: monospace;
            font-size: 1.2rem;
            color: #374151;
            font-weight: bold;
        }

        .main-content {
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .profile-wrapper {
            position: relative;
            margin: 0rem auto;
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            padding: 3rem 4rem;
        }

        .left-info {
            left: 20px;
            top: 20px;
        }

        .right-info {
            right: 20px;
            top: 20px;
        }

        .content-container {
            display: flex;
            gap: 40px;
            padding: 20px;
            position: relative;
            min-height: 500px;
        }

        .vertical-divider {
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 2px;
            transform: translateX(-50%);
            background-image: url('/api/placeholder/2/600');
            background-repeat: repeat-y;
        }

        .section {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

            .section h2 {
                margin-bottom: 20px;
                font-size: 1.5rem;
                color: #374151;
                font-weight: 600;
            }

        .description-area {
            flex: 1;
            width: 100%;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 15px;
            resize: none;
            font-family: inherit;
            font-size: 0.975rem;
            line-height: 1.5;
        }

        .skills-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .skills-dropdown {
            width: 100%;
            padding: 12px;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            font-size: 0.975rem;
            color: #374151;
            cursor: pointer;
            background-color: white;
        }

            .skills-dropdown:focus {
                outline: none;
                border-color: #00ff00;
                box-shadow: 0 0 0 3px rgba(0, 255, 0, 0.1);
            }

            .skills-dropdown option {
                padding: 8px;
            }

        .selected-skills {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            padding: 10px;
            min-height: 100px;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            background-color: #f9fafb;
        }

        .skill-tag {
            background-color: white;
            padding: 6px 12px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            gap: 6px;
            border: 1px solid #e5e7eb;
            font-size: 0.875rem;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }

        .remove-skill {
            cursor: pointer;
            color: #666;
            font-weight: bold;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: #f3f4f6;
        }

            .remove-skill:hover {
                color: #ef4444;
                background-color: #fee2e2;
            }

        .profile-header {
            display: flex;
            align-items: center;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            padding: 0 20px;
        }

        .website-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .website-url {
            color: #374151;
            font-size: 0.975rem;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #374151;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f3f4f6;
        }

        .join-info {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #6b7280;
            font-size: 0.875rem;
        }

        .join-date {
            color: #ef4444;
            font-weight: 500;
        }

        .form-group {
            padding-bottom: 1rem;
        }
    </style>
</head>
<body>
    <header class="page-header">
        <img src="~/images/logo.png" alt="Logo" height="50" class="top-left" />
        <div class="timer" id="timer">00:00:00 09.02.2025</div>
    </header>

    <div class="main-content">
        <div class="header">
            <h1>Autentificare</h1>
        </div>

        <hr />

        @if (Model.AreCredentialsInvalid)
        {
            <div><span style="color:red">Credențiale invalide</span></div>
        }

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Parolă</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Autentificare" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="ResetPassword" class="link">Resetare Parolă</a>
        </div>
        <div>
            <a asp-action="Index" class="link">Înapoi la Listă</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script>
        // Timer update
        function updateTimer() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', {
                hour12: false,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            const dateStr = now.toLocaleDateString('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            }).replace(/\//g, '.');

            document.getElementById('timer').textContent = `${timeStr} ${dateStr}`;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    </script>

</body>
</html>
