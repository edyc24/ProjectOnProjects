@{
    ViewData["Title"] = "Add Project";
}

<div class="container">
    <h2>Add New Project</h2>
    <form method="post" asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <label>Project Name</label>
                <input type="text" name="NumeProiect" class="form-control" required />

                <label>Project Details</label>
                <textarea name="DetaliiProiect" class="form-control"></textarea>
            </div>
            <div class="col-md-6">
                <label>Competition Information</label>
                <textarea name="InformatiiCompetitie" class="form-control"></textarea>

                <label>Start Date</label>
                <input type="date" name="DataStart" class="form-control" required />

                <label>End Date</label>
                <input type="date" name="DataSfarsit" class="form-control" required />
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Submit</button>
    </form>
</div>