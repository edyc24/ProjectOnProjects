@model IEnumerable<MoneyShop.BusinessLogic.Implementation.ProjectService.Models.ProjectModel>

@{
    ViewData["Title"] = "Saved Projects";
}

<div class="container">
    <h2>Saved Projects</h2>
    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var project in Model)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <span>@project.NumeProiect</span>
                    <a class="btn btn-danger btn-sm" asp-action="RemoveFromSaved" asp-route-id="@project.IdProiect">Remove</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No saved projects yet.</p>
    }
</div>