@{
    ViewData["Title"] = "Autentificare Mock";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0 text-center">Autentificare Mock</h3>
                    <p class="text-center text-muted mb-0"><small>Pentru testare - acceptă orice email</small></p>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="demo@moneyshop.ro" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Parolă</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Orice parolă" required>
                        </div>
                        <div class="alert alert-info">
                            <small><strong>Notă:</strong> Acest cont mock acceptă orice email și parolă pentru testare.</small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Autentificare</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
