@{
    ViewData["Title"] = "Profil Mock";
    Layout = "_Layout";
    var mockUser = ViewBag.MockUser as Dictionary<string, object>;
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Profil Utilizator Mock</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>ℹ️ Acesta este un cont mock pentru testare.</strong> Datele nu sunt stocate în baza de date.
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@mockUser?["Id"]</dd>
                        
                        <dt class="col-sm-4">Nume:</dt>
                        <dd class="col-sm-8">@mockUser?["Name"]</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@mockUser?["Email"]</dd>
                        
                        <dt class="col-sm-4">Telefon:</dt>
                        <dd class="col-sm-8">@mockUser?["Phone"]</dd>
                        
                        <dt class="col-sm-4">Rol:</dt>
                        <dd class="col-sm-8">@mockUser?["Role"]</dd>
                    </dl>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Înapoi la Acasă</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
