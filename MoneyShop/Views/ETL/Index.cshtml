@{
    ViewData["Title"] = "ETL - Data Warehouse";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">ETL - Data Warehouse Management</h2>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Operații ETL</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Gestionare procese Extract, Transform, Load pentru Data Warehouse</p>
                    
                    <div class="d-flex gap-2 mb-3">
                        <a href="@Url.Action("Status", "ETL")" class="btn btn-info">
                            <i class="bi bi-info-circle"></i> Status ETL
                        </a>
                        <a href="@Url.Action("Validate", "ETL")" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Validare ETL
                        </a>
                    </div>
                    
                    <div class="alert alert-info">
                        <strong>Notă:</strong> Pentru funcționalitate completă, instalează Oracle.ManagedDataAccess.Core:
                        <code>dotnet add package Oracle.ManagedDataAccess.Core</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

