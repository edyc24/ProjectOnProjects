@model MoneyShop.Controllers.ETLStatusViewModel
@{
    ViewData["Title"] = "ETL Status";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Status ETL - Data Warehouse</h2>
            
            @if (TempData["ETLResult"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["ETLResult"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["ETLError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ETLError"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Fact Table</h5>
                            <h2 class="text-primary">@Model.FactTableCount</h2>
                            <small class="text-muted">FACT_APLICATII_CREDIT</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Utilizatori</h5>
                            <h2 class="text-success">@Model.DimUtilizatorCount</h2>
                            <small class="text-muted">DIM_UTILIZATOR</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Bănci</h5>
                            <h2 class="text-info">@Model.DimBancaCount</h2>
                            <small class="text-muted">DIM_BANCA</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Brokeri</h5>
                            <h2 class="text-warning">@Model.DimBrokerCount</h2>
                            <small class="text-muted">DIM_BROKER</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Acțiuni</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("Trigger", "ETL")" id="etlForm">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary" id="triggerBtn">
                            <i class="bi bi-play-circle"></i> Rulează ETL Full Load
                        </button>
                    </form>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            Ultima actualizare: @Model.LastUpdate.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informații</h5>
                </div>
                <div class="card-body">
                    <p><strong>Proces ETL:</strong> Extract → Transform → Load</p>
                    <p><strong>Procedură:</strong> SP_ETL_FULL_LOAD</p>
                    <p><strong>Schema DW:</strong> moneyshop_dw_user</p>
                    <p class="text-muted">
                        ETL extrage date din schema OLTP (MONEYSHOP), le transformă și le încarcă în Data Warehouse.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('etlForm').addEventListener('submit', function(e) {
        const btn = document.getElementById('triggerBtn');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Rulează...';
    });
</script>

