@model MoneyShop.Controllers.ETLValidationViewModel
@{
    ViewData["Title"] = "Validare ETL";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Validare ETL - Data Warehouse</h2>
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Rezultate Validare</h5>
                </div>
                <div class="card-body">
                    @if (Model.IsValid)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> <strong>Validare reușită!</strong> Toate datele sunt valide.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> <strong>Validare eșuată!</strong> Există probleme cu datele.
                        </div>
                    }
                    
                    <table class="table table-bordered">
                        <tr>
                            <th>Metrică</th>
                            <th>Valoare</th>
                            <th>Status</th>
                        </tr>
                        <tr>
                            <td>Integritate Referențială</td>
                            <td>@Model.OrphanRecords înregistrări orfane</td>
                            <td>
                                @if (Model.OrphanRecords == 0)
                                {
                                    <span class="badge bg-success">OK</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">EROARE</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Număr înregistrări OLTP</td>
                            <td>@Model.OLTPCount</td>
                            <td><span class="badge bg-info">INFO</span></td>
                        </tr>
                        <tr>
                            <td>Număr înregistrări DW</td>
                            <td>@Model.DWCount</td>
                            <td><span class="badge bg-info">INFO</span></td>
                        </tr>
                        <tr>
                            <td>Diferență</td>
                            <td>@Model.Difference</td>
                            <td>
                                @if (Model.Difference == 0)
                                {
                                    <span class="badge bg-success">OK</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">ATENȚIE</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Explicații</h5>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>Integritate Referențială:</strong> Verifică că toate cheile străine din FACT_APLICATII_CREDIT există în dimensiuni.</li>
                        <li><strong>Comparare OLTP vs DW:</strong> Compară numărul de aplicații din OLTP cu numărul din DW.</li>
                        <li><strong>Diferență:</strong> Dacă este 0, înseamnă că toate datele au fost propagate corect.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

