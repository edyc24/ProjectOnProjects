@section Scripts {
    <script>
        let currentLoanType = 'NP';

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentLoanType = this.dataset.loanType;
            });
        });

        // Auto-calculate on input change
        ['salaryNet', 'mealTickets', 'termMonths'].forEach(id => {
            document.getElementById(id).addEventListener('input', debounce(calculateEligibility, 500));
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        async function calculateEligibility() {
            const salaryNet = parseFloat(document.getElementById('salaryNet').value) || 0;
            const mealTickets = parseFloat(document.getElementById('mealTickets').value) || 0;
            const termMonths = parseInt(document.getElementById('termMonths').value) || 60;

            if (salaryNet <= 0) {
                return;
            }

            try {
                const response = await fetch('/api/eligibility/simple', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        loanType: currentLoanType,
                        salaryNetUser: salaryNet,
                        mealTicketsUser: mealTickets,
                        termMonths: termMonths
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    updateResults(data);
                } else {
                    console.error('Error calculating eligibility');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        function updateResults(data) {
            // Update results
            if (data.offers?.maxLoanAmountUsed) {
                const amount = Math.round(data.offers.maxLoanAmountUsed).toLocaleString('ro-RO');
                document.getElementById('resultAmount').textContent = amount + ' Lei';
                document.getElementById('previewEligibility').textContent = amount + ' Lei';
            }

            if (data.offers?.affordability?.paymentMax) {
                const rate = Math.round(data.offers.affordability.paymentMax).toLocaleString('ro-RO');
                document.getElementById('resultRate').textContent = rate + ' Lei';
                document.getElementById('previewRate').textContent = rate;
            }

            if (data.dti?.dtiUsed) {
                const dtiPercent = Math.round(data.dti.dtiUsed * 100);
                document.getElementById('resultDti').textContent = dtiPercent + '%';
                document.getElementById('resultDtiBar').style.width = dtiPercent + '%';
                document.getElementById('previewDtiBar').style.width = dtiPercent + '%';
            }

            // Update preview score (mock for now)
            if (data.decision?.rating) {
                const scoreMap = { 'A': 750, 'B': 650, 'C': 550, 'D': 450 };
                const score = scoreMap[data.decision.rating] || 650;
                document.getElementById('previewScore').textContent = score;
            }
        }

        function scrollToCalculator() {
            document.getElementById('calculator').scrollIntoView({ behavior: 'smooth' });
        }

        // Initial calculation
        calculateEligibility();
    </script>
}
