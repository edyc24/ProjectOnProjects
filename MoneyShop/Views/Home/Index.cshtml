        let currentLoanType = 'NP';

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.tab-btn').forEach(b => {
                    b.classList.remove('active');
                    b.classList.add('bg-[#1a2333]', 'text-gray-400');
                    b.classList.remove('bg-gray-300', 'text-gray-900');
                });
                this.classList.add('active', 'bg-gray-300', 'text-gray-900');
                this.classList.remove('bg-[#1a2333]', 'text-gray-400');
                currentLoanType = this.dataset.loanType;
            });
        });

        // Auto-calculate on input change
        ['salaryNet', 'mealTickets', 'termMonths'].forEach(id => {
            const element = document.getElementById(id);
            if (element) {
                element.addEventListener('input', debounce(calculateEligibility, 500));
            }
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        async function calculateEligibility() {
            const salaryNet = parseFloat(document.getElementById('salaryNet').value) || 0;
            const mealTickets = parseFloat(document.getElementById('mealTickets').value) || 0;
            const termMonths = parseInt(document.getElementById('termMonths').value) || 60;

            if (salaryNet <= 0) {
                return;
            }

            try {
                const response = await fetch('/api/eligibility/simple', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        loanType: currentLoanType,
                        salaryNetUser: salaryNet,
                        mealTicketsUser: mealTickets,
                        termMonths: termMonths
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    updateResults(data);
                } else {
                    console.error('Error calculating eligibility');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        function updateResults(data) {
            // Update results panel
            if (data.offers?.maxLoanAmountUsed) {
                const amount = Math.round(data.offers.maxLoanAmountUsed).toLocaleString('ro-RO');
                document.getElementById('resultAmount').innerHTML = amount + ' <span class="text-xs font-normal text-gray-400">Lei</span>';
                document.getElementById('previewEligibility').innerHTML = amount + ' <span class="text-sm font-normal text-gray-400">Lei</span>';
            }

            if (data.offers?.affordability?.paymentMax) {
                const rate = Math.round(data.offers.affordability.paymentMax).toLocaleString('ro-RO');
                document.getElementById('resultRate').innerHTML = rate + ' <span class="text-xs font-normal text-gray-400">Lei</span>';
                const rateText = document.getElementById('previewRate');
                if (rateText) {
                    rateText.innerHTML = rate + ' <span class="text-[10px] font-normal text-gray-400">Lei/lună</span>';
                }
            }

            if (data.dti?.dtiUsed) {
                const dtiPercent = Math.round(data.dti.dtiUsed * 100);
                document.getElementById('resultDti').textContent = dtiPercent + '%';
                const previewDti = document.getElementById('previewDti');
                if (previewDti) {
                    previewDti.textContent = dtiPercent + '%';
                }
                const previewDtiBar = document.getElementById('previewDtiBar');
                if (previewDtiBar) {
                    previewDtiBar.style.width = (dtiPercent * 0.75) + '%';
                }
            }

            // Update preview score (mock for now)
            if (data.decision?.rating) {
                const scoreMap = { 'A': 750, 'B': 650, 'C': 550, 'D': 450 };
                const score = scoreMap[data.decision.rating] || 650;
                const previewScore = document.getElementById('previewScore');
                if (previewScore) {
                    previewScore.innerHTML = score + ' <span class="text-[10px] font-normal text-green-400 ml-1">Bun</span>';
                }
            }
        }

        function scrollToCalculator() {
            document.getElementById('calculator').scrollIntoView({ behavior: 'smooth' });
        }

        // Initial calculation
        calculateEligibility();
    </script>
}
