@{
    ViewData["Title"] = "MoneyShop - Broker de Credite Autorizat";
    Layout = "_Layout";
}

<!-- Hero Section with Calculator -->
<section class="hero-section-landing">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title">Simuleaza. Intelege. Decide Informat.</h1>
                <p class="hero-description">
                    Credite rapide, simplu si transparent cu un broker autorizat.
                </p>
                <div class="hero-badge">
                    <span class="badge-text">FARA COMISION (complet gratuit)</span>
                </div>
                <div class="hero-buttons mt-4">
                    <button class="btn btn-primary btn-lg" onclick="scrollToCalculator()">
                        Calculeaza Creditul
                    </button>
                    <button class="btn btn-outline-light btn-lg">
                        Vorbeste cu un Broker
                    </button>
                </div>
            </div>
            <div class="col-lg-6 hero-visual">
                <div class="calculator-preview">
                    <div class="desktop-preview">
                        <div class="preview-header">Eligibilitatea ta</div>
                        <div class="preview-amount" id="previewEligibility">85,000 Lei</div>
                        <div class="preview-score">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Scor de Credit <strong id="previewScore">721</strong> Bun</span>
                        </div>
                        <div class="preview-rate">Rata Estimata <strong id="previewRate">1,250</strong> Lei/luna</div>
                        <div class="preview-dti">
                            <div class="dti-label">Grad indatorare</div>
                            <div class="progress">
                                <div class="progress-bar" id="previewDtiBar" style="width: 32%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="mobile-preview">
                        <div class="mobile-content">
                            <div class="mobile-item">44,800 Lei</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Calculator Section -->
<section class="calculator-section" id="calculator">
    <div class="container">
        <div class="calculator-card">
            <div class="calculator-tabs">
                <button class="tab-btn active" data-loan-type="NP">Credit de Nevoi Personale</button>
                <button class="tab-btn" data-loan-type="IPOTECAR">Credit Ipotecar</button>
                <button class="tab-btn" data-loan-type="REFINANTARE">Refinantare</button>
            </div>
            
            <div class="calculator-content">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="calculator-inputs">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Venit Net Lunar</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="salaryNet" value="9000" min="0" step="100">
                                        <span class="input-group-text">Lei</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Bonuri de Masa</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="mealTickets" value="0" min="0" step="50">
                                        <span class="input-group-text">Lei</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Perioada</label>
                                    <select class="form-select" id="termMonths">
                                        <option value="12">1 an</option>
                                        <option value="24">2 ani</option>
                                        <option value="36">3 ani</option>
                                        <option value="48">4 ani</option>
                                        <option value="60" selected>5 ani</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Tip Credit</label>
                                    <select class="form-select" id="creditType" disabled>
                                        <option>Selecteaza tip credit</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button class="btn btn-primary btn-lg w-100" id="calculateBtn" onclick="calculateEligibility()">
                                    Vezi Analiza Completa
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="calculator-results">
                            <h5 class="results-title">Rezultate Estimate</h5>
                            <div class="result-item">
                                <div class="result-label">Suma Estimata</div>
                                <div class="result-value" id="resultAmount">75,000 Lei</div>
                            </div>
                            <div class="result-item">
                                <div class="result-label">Rata Lunara</div>
                                <div class="result-value" id="resultRate">1.250 Lei</div>
                            </div>
                            <div class="result-item">
                                <div class="result-label">Grad Indatorare</div>
                                <div class="result-value">
                                    <span id="resultDti">32%</span>
                                    <span class="badge badge-estimativ">Estimativ</span>
                                </div>
                                <div class="progress mt-2">
                                    <div class="progress-bar" id="resultDtiBar" style="width: 32%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

