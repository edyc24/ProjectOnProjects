<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneyShop.styles.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

            .navbar-custom .navbar-brand img {
                height: 50px;
            }

            .navbar-custom .current-time {
                font-size: 1.2rem;
            }

            .navbar-custom .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    @if (System.IO.File.Exists(System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "logo.png")))
                    {
                        <img src="~/images/logo.png" alt="MoneyShop Logo" class="me-2" style="height: 50px; max-width: 200px;" />
                    }
                    <span class="logo-text ms-2">
                        <span class="logo-money">Money</span><span class="logo-shop">Shop</span><span class="logo-registered">®</span>
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Simulator</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="legalDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Informații Legale
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="legalDropdown">
                                <li><a class="dropdown-item" asp-controller="Legal" asp-action="Terms">Termeni și Condiții</a></li>
                                <li><a class="dropdown-item" asp-controller="Legal" asp-action="Privacy">Politica de Confidențialitate</a></li>
                                <li><a class="dropdown-item" asp-controller="Legal" asp-action="Mandate">Politica de Mandatare</a></li>
                                <li><a class="dropdown-item" asp-controller="Legal" asp-action="DataTransfer">Politica de Transmitere Date</a></li>
                                <li><a class="dropdown-item" asp-controller="Legal" asp-action="Compliance">Pachet de Conformitate</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="MockAccount" asp-action="Profile">Profil Mock</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Edit">Profil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Mandate" asp-action="ViewLog">Log Consimțământ</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="MockAccount" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item" style="border: none; background: none; width: 100%; text-align: left;">Deconectare</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MockAccount" asp-action="Login">Autentificare Mock</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Autentificare</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Register">Înregistrare</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MoneyShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function updateTime() {
            document.getElementById("currentTime").innerText = new Date().toLocaleTimeString();
        }
        setInterval(updateTime, 1000);
        updateTime();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>