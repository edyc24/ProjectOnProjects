@{
    ViewData["Title"] = "Verificare Cod OTP - MoneyShop";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet"/>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#1d4ed8",
                        "dark-bg": "#0B1120",
                    },
                    fontFamily: {
                        sans: ["Inter", "sans-serif"],
                    },
                },
            },
        };
    </script>
    <style>
        body { font-family: 'Inter', sans-serif; }
        .otp-input {
            width: 52px;
            height: 64px;
            font-size: 28px;
            text-align: center;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            transition: all 0.2s;
        }
        .otp-input:focus {
            border-color: #1d4ed8;
            box-shadow: 0 0 0 3px rgba(29, 78, 216, 0.1);
            outline: none;
        }
        .otp-input.filled {
            border-color: #22c55e;
            background-color: #f0fdf4;
        }
        .otp-input.error {
            border-color: #ef4444;
            background-color: #fef2f2;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 flex items-center justify-center">
    <div class="max-w-md w-full mx-4">
        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-icons-outlined text-primary text-3xl">sms</span>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Verificare Cod</h1>
                <p class="text-gray-500" id="subtitle">
                    Am trimis un cod de 6 cifre la numărul tău de telefon
                </p>
                <p class="text-primary font-medium mt-2" id="phoneDisplay">+40 7XX XXX XXX</p>
            </div>

            <!-- OTP Input -->
            <div class="flex justify-center gap-3 mb-6" id="otpContainer">
                <input type="text" maxlength="1" class="otp-input" data-index="0" inputmode="numeric" pattern="[0-9]" autocomplete="one-time-code" />
                <input type="text" maxlength="1" class="otp-input" data-index="1" inputmode="numeric" pattern="[0-9]" />
                <input type="text" maxlength="1" class="otp-input" data-index="2" inputmode="numeric" pattern="[0-9]" />
                <input type="text" maxlength="1" class="otp-input" data-index="3" inputmode="numeric" pattern="[0-9]" />
                <input type="text" maxlength="1" class="otp-input" data-index="4" inputmode="numeric" pattern="[0-9]" />
                <input type="text" maxlength="1" class="otp-input" data-index="5" inputmode="numeric" pattern="[0-9]" />
            </div>

            <!-- Timer -->
            <div class="text-center mb-6">
                <div id="timerContainer" class="flex items-center justify-center gap-2 text-gray-500">
                    <span class="material-icons-outlined text-lg">schedule</span>
                    <span>Codul expiră în <strong id="timer" class="text-primary">5:00</strong></span>
                </div>
                <div id="expiredMessage" class="hidden text-red-500 flex items-center justify-center gap-2">
                    <span class="material-icons-outlined text-lg">error</span>
                    <span>Codul a expirat</span>
                </div>
            </div>

            <!-- Error Message -->
            <div id="errorMessage" class="hidden bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <div class="flex items-center gap-2 text-red-700">
                    <span class="material-icons-outlined">error</span>
                    <span id="errorText">Cod invalid. Mai încearcă.</span>
                </div>
            </div>

            <!-- Success Message -->
            <div id="successMessage" class="hidden bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                <div class="flex items-center gap-2 text-green-700">
                    <span class="material-icons-outlined">check_circle</span>
                    <span>Cod verificat cu succes! Redirecționare...</span>
                </div>
            </div>

            <!-- Verify Button -->
            <button type="button" id="verifyBtn" onclick="verifyOtp()" disabled
                class="w-full bg-primary hover:bg-blue-700 text-white py-3 rounded-lg font-medium transition-colors flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed">
                <span class="material-icons-outlined" id="verifyIcon">verified</span>
                <span id="verifyText">Verifică codul</span>
            </button>

            <!-- Resend -->
            <div class="text-center mt-6">
                <p class="text-sm text-gray-500 mb-2">Nu ai primit codul?</p>
                <button type="button" id="resendBtn" onclick="resendOtp()" disabled
                    class="text-primary font-medium hover:underline disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-1 mx-auto">
                    <span class="material-icons-outlined text-lg">refresh</span>
                    <span id="resendText">Retrimite codul</span>
                </button>
            </div>

            <!-- Back Link -->
            <div class="text-center mt-6 pt-6 border-t border-gray-100">
                <a href="/Account/Login" class="text-gray-500 hover:text-gray-700 flex items-center justify-center gap-1">
                    <span class="material-icons-outlined text-lg">arrow_back</span>
                    Înapoi la login
                </a>
            </div>
        </div>

        <!-- Info -->
        <div class="text-center mt-6 text-sm text-gray-500">
            <p class="flex items-center justify-center gap-2">
                <span class="material-icons-outlined text-lg">security</span>
                Conexiune securizată și criptată
            </p>
        </div>
    </div>

    <script>
        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        let otpId = urlParams.get('otpId');
        let phone = urlParams.get('phone');
        let purpose = urlParams.get('purpose') || 'PHONE_VERIFY';
        let expiresInSeconds = parseInt(urlParams.get('expires')) || 300;
        let redirectUrl = urlParams.get('redirect') || '/';

        // Display masked phone
        if (phone) {
            const masked = phone.replace(/(\+\d{2})(\d{3})(\d{3})(\d{3})/, '$1 $2 XXX $4');
            document.getElementById('phoneDisplay').textContent = masked;
        }

        // Update subtitle based on purpose
        if (purpose === 'LOGIN_SMS') {
            document.getElementById('subtitle').textContent = 'Introdu codul pentru a te autentifica';
        } else if (purpose === 'EMAIL_VERIFY') {
            document.getElementById('subtitle').textContent = 'Am trimis un cod de verificare pe email';
        } else if (purpose === 'SIGN_SMS') {
            document.getElementById('subtitle').textContent = 'Introdu codul pentru a semna documentul';
            expiresInSeconds = 180; // 3 minutes for signing
        }

        // Timer
        let timeLeft = expiresInSeconds;
        let timerInterval;
        let resendCooldown = 30;
        let resendTimer;

        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById('timerContainer').classList.add('hidden');
                    document.getElementById('expiredMessage').classList.remove('hidden');
                    document.getElementById('verifyBtn').disabled = true;
                }
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                document.getElementById('timer').textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        function startResendCooldown() {
            document.getElementById('resendBtn').disabled = true;
            document.getElementById('resendText').textContent = `Retrimite în ${resendCooldown}s`;
            
            resendTimer = setInterval(() => {
                resendCooldown--;
                if (resendCooldown <= 0) {
                    clearInterval(resendTimer);
                    document.getElementById('resendBtn').disabled = false;
                    document.getElementById('resendText').textContent = 'Retrimite codul';
                    resendCooldown = 30;
                } else {
                    document.getElementById('resendText').textContent = `Retrimite în ${resendCooldown}s`;
                }
            }, 1000);
        }

        startTimer();
        startResendCooldown();

        // OTP Input handling
        const inputs = document.querySelectorAll('.otp-input');

        inputs.forEach((input, index) => {
            input.addEventListener('input', (e) => {
                const value = e.target.value;
                
                // Only allow numbers
                if (!/^\d*$/.test(value)) {
                    e.target.value = '';
                    return;
                }

                if (value.length === 1) {
                    e.target.classList.add('filled');
                    e.target.classList.remove('error');
                    
                    // Move to next input
                    if (index < 5) {
                        inputs[index + 1].focus();
                    }
                }

                // Check if all inputs are filled
                checkComplete();
            });

            input.addEventListener('keydown', (e) => {
                // Handle backspace
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    inputs[index - 1].focus();
                    inputs[index - 1].classList.remove('filled');
                }
            });

            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text').replace(/\D/g, '').slice(0, 6);
                
                for (let i = 0; i < pastedData.length && i < 6; i++) {
                    inputs[i].value = pastedData[i];
                    inputs[i].classList.add('filled');
                }
                
                if (pastedData.length >= 6) {
                    inputs[5].focus();
                }
                
                checkComplete();
            });

            input.addEventListener('focus', () => {
                input.select();
            });
        });

        function checkComplete() {
            const code = getCode();
            document.getElementById('verifyBtn').disabled = code.length !== 6 || timeLeft <= 0;
        }

        function getCode() {
            return Array.from(inputs).map(i => i.value).join('');
        }

        function setError(message) {
            document.getElementById('errorMessage').classList.remove('hidden');
            document.getElementById('errorText').textContent = message;
            document.getElementById('successMessage').classList.add('hidden');
            inputs.forEach(i => i.classList.add('error'));
        }

        function clearError() {
            document.getElementById('errorMessage').classList.add('hidden');
            inputs.forEach(i => i.classList.remove('error'));
        }

        async function verifyOtp() {
            const code = getCode();
            if (code.length !== 6) return;

            clearError();
            
            const btn = document.getElementById('verifyBtn');
            const icon = document.getElementById('verifyIcon');
            const text = document.getElementById('verifyText');
            
            btn.disabled = true;
            icon.textContent = 'hourglass_empty';
            icon.classList.add('animate-spin');
            text.textContent = 'Verificare...';

            try {
                const response = await fetch('/api/otp/verify', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        otpId: otpId,
                        phone: phone,
                        purpose: purpose,
                        code: code
                    })
                });

                const data = await response.json();

                if (response.ok && data.status === 'success') {
                    // Success!
                    document.getElementById('successMessage').classList.remove('hidden');
                    inputs.forEach(i => {
                        i.classList.remove('error');
                        i.classList.add('filled');
                        i.disabled = true;
                    });
                    
                    icon.textContent = 'check_circle';
                    icon.classList.remove('animate-spin');
                    text.textContent = 'Verificat!';

                    // If login, store token
                    if (data.accessToken) {
                        localStorage.setItem('accessToken', data.accessToken);
                        localStorage.setItem('user', JSON.stringify(data.user));
                    }

                    // Redirect after short delay
                    setTimeout(() => {
                        window.location.href = redirectUrl;
                    }, 1500);
                } else {
                    setError(data.message || 'Cod invalid. Mai încearcă.');
                    btn.disabled = false;
                    icon.textContent = 'verified';
                    icon.classList.remove('animate-spin');
                    text.textContent = 'Verifică codul';
                    
                    // Clear inputs
                    inputs.forEach(i => {
                        i.value = '';
                        i.classList.remove('filled');
                    });
                    inputs[0].focus();
                }
            } catch (error) {
                console.error('Error:', error);
                setError('Eroare de conexiune. Încearcă din nou.');
                btn.disabled = false;
                icon.textContent = 'verified';
                icon.classList.remove('animate-spin');
                text.textContent = 'Verifică codul';
            }
        }

        async function resendOtp() {
            clearError();
            
            const btn = document.getElementById('resendBtn');
            btn.disabled = true;
            document.getElementById('resendText').textContent = 'Se trimite...';

            try {
                const response = await fetch('/api/otp/request', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        phone: phone,
                        purpose: purpose
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    // Update otpId
                    otpId = data.otpId;
                    expiresInSeconds = data.expiresInSeconds;
                    timeLeft = expiresInSeconds;
                    
                    // Restart timer
                    clearInterval(timerInterval);
                    document.getElementById('timerContainer').classList.remove('hidden');
                    document.getElementById('expiredMessage').classList.add('hidden');
                    startTimer();
                    
                    // Start resend cooldown
                    resendCooldown = 30;
                    startResendCooldown();
                    
                    // Enable verify button
                    checkComplete();
                    
                    // Clear and focus first input
                    inputs.forEach(i => {
                        i.value = '';
                        i.classList.remove('filled', 'error');
                        i.disabled = false;
                    });
                    inputs[0].focus();
                } else {
                    setError(data.message || 'Nu s-a putut retrimite codul.');
                    startResendCooldown();
                }
            } catch (error) {
                console.error('Error:', error);
                setError('Eroare de conexiune. Încearcă din nou.');
                startResendCooldown();
            }
        }

        // Focus first input on load
        inputs[0].focus();
    </script>
</body>
</html>

