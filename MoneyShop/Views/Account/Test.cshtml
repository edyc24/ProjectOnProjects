    <script>
        function updateTimer() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', {
                hour12: false,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            }).split(':').reverse().join(':');
            const dateStr = now.toLocaleDateString('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric'
            }).replace(/\//g, '.');

            document.getElementById('timer').textContent = `${timeStr} ${dateStr}`;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    </script>
