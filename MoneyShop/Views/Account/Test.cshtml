

@{
    ViewData["Title"] = "Home";
    Layout = null;
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        min-height: 100vh;
        background-color: white;
        font-family: system-ui, -apple-system, sans-serif;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
        background-color: white;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: bold;
        font-family: serif;
        text-decoration: underline;
    }

    .timer {
        font-family: monospace;
        font-size: 1.2rem;
        color: #374151;
        font-weight: bold;
    }

    .main-content {
        padding: 4rem;
        max-width:1400px;
        height: 650px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
    }

    .column {
        flex: 1;
        margin: 0 1rem;
    }

    .divider {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 1rem;
    }

        .divider img {
            width: 50px; /* Make the divider larger */
            height: 100%;
        }

    .subject-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center; /* Center the text within the section */
    }

        .subject-section h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            width: 100%; /* Ensure the title takes the full width */
        }

    .doc {
        display: inline-block;
        width: 30%; /* Adjust width to fit three per line */
        padding: 0.5rem;
        margin: 0.1rem; /* Smaller margin */
        font-size: 1rem;
        color: black;
        background-color: whitesmoke;
        border: none;
        border-radius: 5px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
        height: 1.5rem; /* Set a fixed height */
    }

        .doc:hover {
            background-color: grey;
        }
</style>

