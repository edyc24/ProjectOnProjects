@{
    ViewData["Title"] = "Log ConsimÈ›ÄƒmÃ¢nt";
    Layout = "_Layout";
    var consentLog = ViewBag.ConsentLog as List<object>;
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">ðŸ“‹ Log Juridic de ConsimÈ›ÄƒmÃ¢nt</h3>
                    <p class="text-muted mb-0"><small>Istoricul complet al consimÈ›ÄƒminÈ›elor tale</small></p>
                </div>
                <div class="card-body">
                    @if (consentLog == null || consentLog.Count == 0)
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">Nu existÄƒ Ã®nregistrÄƒri Ã®n log-ul de consimÈ›ÄƒmÃ¢nt.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Eveniment</th>
                                        <th>Data/Ora</th>
                                        <th>IP</th>
                                        <th>Status</th>
                                        <th>User Agent</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var logEntry in consentLog)
                                    {
                                        <tr>
                                            <td>
                                                @if (logEntry is System.Text.Json.JsonElement jsonElement)
                                                {
                                                    @(jsonElement.TryGetProperty("Event", out var eventProp) ? eventProp.GetString() : "N/A")
                                                }
                                                else
                                                {
                                                    @logEntry.ToString()
                                                }
                                            </td>
                                            <td>
                                                @if (logEntry is System.Text.Json.JsonElement jsonEl)
                                                {
                                                    @(jsonEl.TryGetProperty("Timestamp", out var tsProp) ? DateTime.Parse(tsProp.GetString() ?? "").ToString("dd.MM.yyyy HH:mm:ss") : "N/A")
                                                }
                                            </td>
                                            <td>
                                                @if (logEntry is System.Text.Json.JsonElement jsonEl2)
                                                {
                                                    @(jsonEl2.TryGetProperty("IP", out var ipProp) ? ipProp.GetString() : "N/A")
                                                }
                                            </td>
                                            <td>
                                                @if (logEntry is System.Text.Json.JsonElement jsonEl3)
                                                {
                                                    var accepted = jsonEl3.TryGetProperty("Accepted", out var accProp) && accProp.GetBoolean();
                                                    <span class="badge @(accepted ? "bg-success" : "bg-danger")">
                                                        @(accepted ? "Acceptat" : "Refuzat")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <small>
                                                    @if (logEntry is System.Text.Json.JsonElement jsonEl4)
                                                    {
                                                        @(jsonEl4.TryGetProperty("UserAgent", out var uaProp) ? uaProp.GetString()?.Substring(0, Math.Min(50, uaProp.GetString()?.Length ?? 0)) + "..." : "N/A")
                                                    }
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">ÃŽnapoi la AcasÄƒ</a>
                    </div>
                </div>
            </div>
        </div>
