@{
    ViewData["Title"] = "Comparație Tipuri Credit";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Comparație Tipuri Credit</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <canvas id="tipuriChart"></canvas>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Tip Credit</th>
                                    <th>Tip Operațiune</th>
                                    <th>Număr Aplicații</th>
                                    <th>Suma Totală Aprobată</th>
                                    <th>Scoring Mediu</th>
                                    <th>DTI Mediu</th>
                                    <th>Durata Medie Procesare</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="7" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let tipuriChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/comparatie-tipuri-credit');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderChart(result.data);
                    renderTable(result.data);
                }
            } catch (error) {
                console.error('Error loading data:', error);
            }
        }
        
        function renderChart(data) {
            const ctx = document.getElementById('tipuriChart').getContext('2d');
            const labels = data.map(d => (d.TIPCREDIT || '') + ' - ' + (d.TIPOPERATIUNE || ''));
            const aplicatii = data.map(d => d.NUMARAPLICATII || 0);
            const suma = data.map(d => d.SUMATOTALAAPROBATA || 0);
            
            if (tipuriChart) tipuriChart.destroy();
            
            tipuriChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Număr Aplicații',
                            data: aplicatii,
                            backgroundColor: 'rgba(75, 192, 192, 0.8)',
                            yAxisID: 'y'
                        },
                        {
                            label: 'Suma Totală Aprobată (Lei)',
                            data: suma,
                            backgroundColor: 'rgba(255, 99, 132, 0.8)',
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            type: 'linear',
                            position: 'left',
                            beginAtZero: true
                        },
                        y1: {
                            type: 'linear',
                            position: 'right',
                            beginAtZero: true,
                            grid: {
                                drawOnChartArea: false
                            },
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('ro-RO') + ' Lei';
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.TIPCREDIT || ''}</td>
                    <td>${d.TIPOPERATIUNE || ''}</td>
                    <td>${d.NUMARAPLICATII || 0}</td>
                    <td>${(d.SUMATOTALAAPROBATA || 0).toLocaleString('ro-RO')} Lei</td>
                    <td>${(d.SCORINGMEDIU || 0).toFixed(2)}</td>
                    <td>${(d.DTIMEDIU || 0).toFixed(2)}%</td>
                    <td>${(d.DURATAMEDIEPROCESARE || 0).toFixed(1)} zile</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

