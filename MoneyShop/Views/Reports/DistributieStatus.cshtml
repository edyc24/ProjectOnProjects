@{
    ViewData["Title"] = "Distribuție Aplicații pe Status";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Distribuție Aplicații pe Status</h2>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <canvas id="statusPieChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <canvas id="statusBarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Categorie</th>
                                    <th>Număr Aplicații</th>
                                    <th>Procent</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="4" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let pieChart, barChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/distributie-status');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderCharts(result.data);
                    renderTable(result.data);
                } else {
                    document.getElementById('dataTable').innerHTML = 
                        '<tr><td colspan="4" class="text-center text-danger">Eroare la încărcarea datelor</td></tr>';
                }
            } catch (error) {
                console.error('Error loading data:', error);
            }
        }
        
        function renderCharts(data) {
            const labels = data.map(d => d.STATUS || '');
            const values = data.map(d => d.NUMARAPLICATII || 0);
            const colors = [
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(255, 206, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)',
                'rgba(153, 102, 255, 0.8)'
            ];
            
            // Pie Chart
            const pieCtx = document.getElementById('statusPieChart').getContext('2d');
            if (pieChart) pieChart.destroy();
            pieChart = new Chart(pieCtx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: values,
                        backgroundColor: colors
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Distribuție pe Status'
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Bar Chart
            const barCtx = document.getElementById('statusBarChart').getContext('2d');
            if (barChart) barChart.destroy();
            barChart = new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Număr Aplicații',
                        data: values,
                        backgroundColor: colors
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Număr Aplicații pe Status'
                        },
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.STATUS || ''}</td>
                    <td>${d.CATEGORIE || ''}</td>
                    <td>${d.NUMARAPLICATII || 0}</td>
                    <td>${(d.PROCENT || 0).toFixed(2)}%</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

