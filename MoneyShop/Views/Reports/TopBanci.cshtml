@{
    ViewData["Title"] = "Top Bănci după Volum Credit";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Top Bănci după Volum Credit</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <canvas id="banciChart"></canvas>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Bancă</th>
                                    <th>Număr Aplicații</th>
                                    <th>Suma Totală Aprobată</th>
                                    <th>Comision Mediu</th>
                                    <th>Scoring Mediu</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let banciChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/top-banci');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderChart(result.data);
                    renderTable(result.data);
                }
            } catch (error) {
                console.error('Error loading data:', error);
            }
        }
        
        function renderChart(data) {
            const ctx = document.getElementById('banciChart').getContext('2d');
            const labels = data.map(d => d.BANCA || '');
            const suma = data.map(d => d.SUMATOTALAAPROBATA || 0);
            
            if (banciChart) banciChart.destroy();
            
            banciChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Suma Totală Aprobată (Lei)',
                        data: suma,
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Top 10 Bănci după Volum Credit'
                        },
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('ro-RO') + ' Lei';
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.BANCA || ''}</td>
                    <td>${d.NUMARAPLICATII || 0}</td>
                    <td>${(d.SUMATOTALAAPROBATA || 0).toLocaleString('ro-RO')} Lei</td>
                    <td>${(d.COMISIONMEDIU || 0).toFixed(2)} Lei</td>
                    <td>${(d.SCORINGMEDIU || 0).toFixed(2)}</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

