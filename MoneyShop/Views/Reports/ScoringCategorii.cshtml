@{
    ViewData["Title"] = "Analiza Scoring pe Categorii";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Analiza Scoring pe Categorii</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <canvas id="scoringChart"></canvas>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Rol</th>
                                    <th>Tip Credit</th>
                                    <th>Număr Aplicații</th>
                                    <th>Scoring Min</th>
                                    <th>Scoring Max</th>
                                    <th>Scoring Mediu</th>
                                    <th>Scoring Median</th>
                                    <th>Deviație Standard</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="8" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let scoringChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/scoring-categorii');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderChart(result.data);
                    renderTable(result.data);
                }
            } catch (error) {
                console.error('Error loading data:', error);
            }
        }
        
        function renderChart(data) {
            const ctx = document.getElementById('scoringChart').getContext('2d');
            const labels = data.map(d => (d.IDROL || '') + ' - ' + (d.TIPCREDIT || ''));
            const scoringMediu = data.map(d => d.SCORINGMEDIU || 0);
            const scoringMin = data.map(d => d.SCORINGMIN || 0);
            const scoringMax = data.map(d => d.SCORINGMAX || 0);
            
            if (scoringChart) scoringChart.destroy();
            
            scoringChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Scoring Mediu',
                            data: scoringMediu,
                            backgroundColor: 'rgba(75, 192, 192, 0.8)'
                        },
                        {
                            label: 'Scoring Min',
                            data: scoringMin,
                            backgroundColor: 'rgba(255, 99, 132, 0.8)'
                        },
                        {
                            label: 'Scoring Max',
                            data: scoringMax,
                            backgroundColor: 'rgba(255, 206, 86, 0.8)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 300,
                            max: 850
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.IDROL || ''}</td>
                    <td>${d.TIPCREDIT || ''}</td>
                    <td>${d.NUMARAPLICATII || 0}</td>
                    <td>${(d.SCORINGMIN || 0).toFixed(2)}</td>
                    <td>${(d.SCORINGMAX || 0).toFixed(2)}</td>
                    <td>${(d.SCORINGMEDIU || 0).toFixed(2)}</td>
                    <td>${(d.SCORINGMEDIAN || 0).toFixed(2)}</td>
                    <td>${(d.SCORINGSTDDEV || 0).toFixed(2)}</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

