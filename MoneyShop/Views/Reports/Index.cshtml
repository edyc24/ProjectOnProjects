@{
    ViewData["Title"] = "Rapoarte BI";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Rapoarte Business Intelligence</h2>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Evoluția Aplicațiilor în Timp</h5>
                            <p class="card-text text-muted">Evoluția numărului de aplicații și sumei totale aprobate pe trimestre</p>
                            <a href="@Url.Action("EvolutieAplicatii", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Distribuție Aplicații pe Status</h5>
                            <p class="card-text text-muted">Distribuția aplicațiilor pe status (aprobate, refuzate, etc.)</p>
                            <a href="@Url.Action("DistributieStatus", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Top Bănci după Volum Credit</h5>
                            <p class="card-text text-muted">Top 10 bănci după volumul total de credite aprobate</p>
                            <a href="@Url.Action("TopBanci", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Comparație Tipuri Credit</h5>
                            <p class="card-text text-muted">Comparație între tipurile de credit: număr aplicații, suma totală, scoring</p>
                            <a href="@Url.Action("ComparatieTipuriCredit", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Performanța Brokerilor</h5>
                            <p class="card-text text-muted">Top 10 brokeri după numărul de aplicații aprobate și volum total</p>
                            <a href="@Url.Action("PerformantaBrokeri", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Analiza Scoring pe Categorii</h5>
                            <p class="card-text text-muted">Distribuția scoring-ului pe categorii de utilizatori și tipuri de credit</p>
                            <a href="@Url.Action("ScoringCategorii", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Rata de Aprobare pe Bancă</h5>
                            <p class="card-text text-muted">Rata de aprobare (aprobați / total) pentru fiecare bancă</p>
                            <a href="@Url.Action("RataAprobareBanca", "Reports")" class="btn btn-primary">
                                Vezi Raport <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

