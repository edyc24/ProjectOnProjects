@{
    ViewData["Title"] = "Evoluția Aplicațiilor în Timp";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Evoluția Aplicațiilor în Timp</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <canvas id="evolutieChart" height="80"></canvas>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>An</th>
                                    <th>Trimestru</th>
                                    <th>Număr Aplicații</th>
                                    <th>Suma Totală Aprobată</th>
                                    <th>Scoring Mediu</th>
                                    <th>DTI Mediu</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let evolutieChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/evolutie-aplicatii');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderChart(result.data);
                    renderTable(result.data);
                } else {
                    document.getElementById('dataTable').innerHTML = 
                        '<tr><td colspan="6" class="text-center text-danger">Eroare la încărcarea datelor: ' + (result.message || 'Necunoscut') + '</td></tr>';
                }
            } catch (error) {
                console.error('Error loading data:', error);
                document.getElementById('dataTable').innerHTML = 
                    '<tr><td colspan="6" class="text-center text-danger">Eroare la încărcarea datelor</td></tr>';
            }
        }
        
        function renderChart(data) {
            const ctx = document.getElementById('evolutieChart').getContext('2d');
            
            const labels = data.map(d => d.AN + ' Q' + d.TRIMESTRU);
            const aplicatii = data.map(d => d.NUMARAPLICATII || 0);
            const suma = data.map(d => d.SUMATOTALAAPROBATA || 0);
            
            if (evolutieChart) {
                evolutieChart.destroy();
            }
            
            evolutieChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Număr Aplicații',
                            data: aplicatii,
                            borderColor: 'rgb(75, 192, 192)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            yAxisID: 'y'
                        },
                        {
                            label: 'Suma Totală Aprobată (Lei)',
                            data: suma,
                            borderColor: 'rgb(255, 99, 132)',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Număr Aplicații'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Suma (Lei)'
                            },
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.AN || ''}</td>
                    <td>${d.TRIMESTRU || ''}</td>
                    <td>${d.NUMARAPLICATII || 0}</td>
                    <td>${(d.SUMATOTALAAPROBATA || 0).toLocaleString('ro-RO')} Lei</td>
                    <td>${(d.SCORINGMEDIU || 0).toFixed(2)}</td>
                    <td>${(d.DTIMEDIU || 0).toFixed(2)}%</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

