@{
    ViewData["Title"] = "Rata de Aprobare pe Bancă";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Rata de Aprobare pe Bancă</h2>
            
            <div class="card mb-4">
                <div class="card-body">
                    <canvas id="rataChart"></canvas>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Date Tabelare</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Bancă</th>
                                    <th>Total Aplicații</th>
                                    <th>Aprobate</th>
                                    <th>Refuzate</th>
                                    <th>Rata Aprobare (%)</th>
                                    <th>Scoring Mediu Aprobate</th>
                                    <th>Scoring Mediu Refuzate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="7" class="text-center">Se încarcă datele...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let rataChart;
        
        async function loadData() {
            try {
                const response = await fetch('/api/reports/rata-aprobare-banca');
                const result = await response.json();
                
                if (result.success && result.data) {
                    renderChart(result.data);
                    renderTable(result.data);
                }
            } catch (error) {
                console.error('Error loading data:', error);
            }
        }
        
        function renderChart(data) {
            const ctx = document.getElementById('rataChart').getContext('2d');
            const labels = data.map(d => d.BANCA || '');
            const rata = data.map(d => d.RATAAPROBARE || 0);
            
            if (rataChart) rataChart.destroy();
            
            rataChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Rata de Aprobare (%)',
                        data: rata,
                        backgroundColor: data.map(d => {
                            const rate = d.RATAAPROBARE || 0;
                            if (rate >= 70) return 'rgba(75, 192, 192, 0.8)';
                            if (rate >= 50) return 'rgba(255, 206, 86, 0.8)';
                            return 'rgba(255, 99, 132, 0.8)';
                        }),
                        borderColor: data.map(d => {
                            const rate = d.RATAAPROBARE || 0;
                            if (rate >= 70) return 'rgba(75, 192, 192, 1)';
                            if (rate >= 50) return 'rgba(255, 206, 86, 1)';
                            return 'rgba(255, 99, 132, 1)';
                        }),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Rata de Aprobare pe Bancă (%)'
                        },
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function renderTable(data) {
            const tbody = document.querySelector('#dataTable tbody');
            tbody.innerHTML = data.map(d => `
                <tr>
                    <td>${d.BANCA || ''}</td>
                    <td>${d.TOTALAPLICATII || 0}</td>
                    <td>${d.APROBATE || 0}</td>
                    <td>${d.REFUZATE || 0}</td>
                    <td>
                        <span class="badge ${(d.RATAAPROBARE || 0) >= 70 ? 'bg-success' : (d.RATAAPROBARE || 0) >= 50 ? 'bg-warning' : 'bg-danger'}">
                            ${(d.RATAAPROBARE || 0).toFixed(2)}%
                        </span>
                    </td>
                    <td>${(d.SCORINGMEDIUAPROBATE || 0).toFixed(2)}</td>
                    <td>${(d.SCORINGMEDIUREFUZATE || 0).toFixed(2)}</td>
                </tr>
            `).join('');
        }
        
        loadData();
    </script>
}

